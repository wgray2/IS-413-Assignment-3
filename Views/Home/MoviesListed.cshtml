@{
    ViewBag.Title = "Movie List";
}

@model IEnumerable<IS_413_Assignemnt_3.Models.MovieResponse>
<div>
    <h2>Here are your movies</h2>
    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To:</th><th>Notes</th></tr>
        </thead>
        <tbody>
            @foreach (IS_413_Assignemnt_3.Models.MovieResponse x in Model)
            {
                if (x.Title == "Independence Day")
                {
                }
                else
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edited</td>
                        <td>@x.LentTo</td>
                        <td>@x.Notes</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>